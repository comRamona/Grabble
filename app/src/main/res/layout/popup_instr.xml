<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_instr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop"
    android:orientation="vertical"

    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        >
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                >
                <TableRow
                    >

                    <TextView
                        android:layout_column="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Red"

                        android:textSize="20dp"
                        android:text="•"></TextView>
                    <TextView
                        android:layout_column="2"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Collect letters from all over the campus by going close to a letter and clicking on it.\nForm 7 letter words with your collected letters. "></TextView>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/Blue"
                        android:text="•"></TextView>
                    <TextView
                        android:layout_column="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Click the (...) options  menu to access your Challenges, Leaderboard, Statistics and Word Arena.  If yu get stuck, simply input at least 3 letters and press Hint. \nYou get more hints by completing challenges."></TextView>
                </TableRow>
            </TableLayout>

        </ScrollView>





        <android.support.design.widget.FloatingActionButton
            android:id="@+id/instr_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_close_light"
            android:layout_weight="0.11" />


    </LinearLayout>


</LinearLayout>